<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="testtask.slatestudio.locationchecker.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/is_in_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="undefined" />

        <EditText
            android:id="@+id/geo_point_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/geo_point_latitude_hint"
            android:text="100"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/geo_point_longtitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/geo_point_longtitude_hint"
            android:text="100"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/radius_hint"
            android:text="100"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/network_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/network_name_hint"
            android:text="VSE_V_LOGOVO"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/check_btn_txt" />
    </LinearLayout>

</FrameLayout>
